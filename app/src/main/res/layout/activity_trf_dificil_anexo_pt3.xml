<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tarefas_dificeis.trf_dificil_anexo_pt3">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="40dp"
        app:cardCornerRadius="30dp"
        android:layout_gravity="end|center"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:background="#075E54"
            android:contextClickable="false"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-black"
                android:text="Documentos"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_arrow_back"
                android:layout_marginTop="-40dp"
                android:layout_marginStart="10dp"/>

            <ImageView
                android:id="@+id/imgphone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/busca"
                android:layout_marginTop="-49dp"
                android:layout_marginStart="240dp"/>

            <ImageView
                android:id="@+id/imgoptions"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/menu"
                android:layout_marginTop="-50dp"
                android:layout_marginStart="280dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="60dp">

            <ImageView
                android:id="@+id/imgmenu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/menu_outro"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/txtoutrosdocs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginStart="10dp"
                android:text="Procurar outros documentos ..."
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imgpdfluz"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/pdf"
                android:layout_marginTop="65dp"
                android:layout_marginStart="-300dp"/>

            <TextView
                android:id="@+id/txtdescLUZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:clickable="true"
                android:text="2 via Conta de Luz.PDF"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginStart="5dp"
                android:text="17/04/2023"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txttamanho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginStart="-245dp"
                android:text="6,9MB"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imgpdfluz1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/pdf"
                android:layout_marginTop="130dp"
                android:layout_marginStart="-94dp"/>

            <TextView
                android:id="@+id/txtdesc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:clickable="true"
                android:text="2 via Conta de Agua.PDF"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtdata1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:layout_marginStart="5dp"
                android:text="17/04/2023"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txttamanho1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="155dp"
                android:layout_marginStart="-255dp"
                android:text="6,9MB"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imgpdfluz2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/pdf"
                android:layout_marginTop="195dp"
                android:layout_marginStart="-94dp"/>

            <TextView
                android:id="@+id/txtdesc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="195dp"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:clickable="true"
                android:text="Boleto.PDF"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtdata2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="210dp"
                android:layout_marginLeft="100dp"
                android:text="17/04/2023"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txttamanho2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="222dp"
                android:layout_marginStart="-255dp"
                android:text="6,9MB"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passo 3"
        android:fontFamily="sans-serif-black"
        android:textSize="26sp"
        android:textColor="#34B7F1"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginStart="-268dp"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toque na 2 via conta de luz "
        android:fontFamily="sans-serif-black"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="70dp"
        android:layout_marginStart="-195dp"/>


</LinearLayout>