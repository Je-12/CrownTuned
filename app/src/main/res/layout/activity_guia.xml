<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/lavender"
    tools:context=".app.guia">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="630dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_edittext"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Sênior(es)"
                android:textColor="@color/lavender"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="292dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Este aplicativo tem o intuito de ajudar a fazer pequenas funções do WhatsApp, gerando independência tecnológia para pessoas com mais ou menos 60 anos."
                android:textAlignment="center"
                android:textColor="@color/lavender"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtinicie"
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:text=" Inicie sua jornada e fique craque no WhatsApp"
                android:textAlignment="center"
                android:textColor="@color/lavender"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/btn_iniciarjornada"
                android:layout_width="115dp"
                android:layout_height="84dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:padding="12dp"
                android:text="Iniciar"
                android:textSize="20sp"
                app:cornerRadius="15dp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>