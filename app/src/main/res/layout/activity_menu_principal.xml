<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/lavender"
    tools:context=".app.menu_principal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_edittext"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Seja Bem Vindo !"
                android:textColor="@color/lavender"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Sênior(es)"
        android:layout_gravity="center"
        android:textColor="@color/lavender"
        android:textSize="28sp"
        android:textStyle="bold" />

            <Button
                android:id="@+id/btn_tarefa"
                android:layout_width="235dp"
                android:layout_height="89dp"
                android:layout_marginTop="30dp"
                android:padding="20dp"
                android:layout_gravity="center"
                android:text="Tarefas"
                android:textSize="24dp"
                app:cornerRadius="15dp"
                app:icon="@drawable/baseline_task_alt_24"
                tools:layout_editor_absoluteX="87dp"
                tools:layout_editor_absoluteY="236dp" />

            <Button
                android:id="@+id/btn_cursos"
                android:layout_width="235dp"
                android:layout_height="89dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:padding="20dp"
                android:text="Cursos"
                android:textSize="24dp"
                app:cornerRadius="15dp"
                app:icon="@drawable/baseline_playlist_add_check_circle_24"
                tools:layout_editor_absoluteX="87dp"
                tools:layout_editor_absoluteY="346dp" />

            <Button
                android:id="@+id/btn_guia"
                android:layout_width="235dp"
                android:layout_height="89dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:text="Guia"
                android:padding="20dp"
                android:textSize="24dp"
                app:cornerRadius="15dp"
                app:icon="@drawable/baseline_menu_book_24"
                tools:layout_editor_absoluteX="87dp"
                tools:layout_editor_absoluteY="456dp" />

            <Button
                android:id="@+id/btn_sugestao"
                android:layout_width="235dp"
                android:layout_height="89dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:text="Sugestão"
                android:padding="20dp"
                android:textSize="24dp"
                app:cornerRadius="15dp"
                app:icon="@drawable/baseline_add_comment_24"
                tools:layout_editor_absoluteX="87dp"
                tools:layout_editor_absoluteY="456dp" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="93dp"
        android:layout_height="74dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:padding="12dp"
        android:text="Sair"
        android:textSize="20sp"
        app:cornerRadius="15dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>