<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/lavender"
    tools:context=".tarefas_faceis.trf_facil_ident_whats">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="577dp"
        android:layout_margin="40dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_edittext"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Passo 1"
                android:fontFamily="sans-serif-black"
                android:textSize="26sp"
                android:textColor="#34B7F1"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="100dp"/>

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:text="Toque no WhatsApp"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgv_facebook"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="60dp"
                android:clickable="true"
                app:srcCompat="@drawable/facebook" />

            <ImageView
                android:id="@+id/imgv_snapchat"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:clickable="true"
                app:srcCompat="@drawable/snapchat" />

            <ImageView
                android:id="@+id/imgv_youtube"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:clickable="true"
                app:srcCompat="@drawable/youtube" />

            <ImageView
                android:id="@+id/imgv_google"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="-360dp"
                android:clickable="true"
                app:srcCompat="@drawable/pesquisa" />

            <ImageView
                android:id="@+id/imgv_whatsapp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="30dp"
                android:clickable="true"
                app:srcCompat="@drawable/whatsapp" />

            <ImageView
                android:id="@+id/imgv_twitter"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="30dp"
                android:clickable="true"
                app:srcCompat="@drawable/twitter" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>