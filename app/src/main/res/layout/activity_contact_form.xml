<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".app.contact_form">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:layout_marginTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="660dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/custom_edittext"
        android:orientation="vertical"
        android:padding="24dp"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sugest達o"
        android:textAlignment="center"
        android:textColor="@color/lavender"
        android:textSize="32sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextnome"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edittext"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="8dp"
        android:hint="Nome"
        android:padding="8dp"
        android:textColor="@color/black" />

        <EditText
            android:id="@+id/editTextemail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="8dp"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/editTextsugestao"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/ic_baseline_add_comment_24"
            android:drawablePadding="8dp"
            android:hint="Sugest達o"
            android:inputType="textMultiLine"
            android:padding="8dp"
            android:textColor="@color/black" />

    <Button
        android:id="@+id/buttonSendcontact"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/lavender"
        android:text="Enviar Sugest達o"
        android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OU"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_whatsapp"
            android:layout_width="190dp"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="110dp"
            android:backgroundTint="@color/green"
            android:text="Sugest達o via WhatsApp"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="-90dp"
            android:src="@drawable/iconwhats" />
    </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>