<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tarefas_faceis.trf_facil_send_photo_pt2">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_gravity="end|center"
        android:layout_margin="40dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="420dp"
            android:orientation="horizontal"
            android:background="@color/icones">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vídeo"
                android:layout_marginTop="8dp"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:layout_marginStart="100dp"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/white_background"
                android:text="    Foto"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginStart="15dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imgbotaophoto2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:clickable="true"
            android:layout_marginTop="340dp"
            android:layout_marginStart="140dp"
            android:src="@drawable/baseline_arrow_circle_up_24" />

        <ImageView
            android:id="@+id/imgbotaophoto1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:clickable="true"
            android:layout_marginTop="352dp"
            android:layout_marginStart="153dp"
            android:src="@drawable/baseline_circle_24" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="358dp"
            android:layout_marginStart="13dp"
            android:src="@drawable/baseline_image" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="358dp"
            android:layout_marginStart="280dp"
            android:src="@drawable/baseline_crop_rotate_24" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="280dp"
            android:src="@drawable/baseline_flash_off" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/white_background"
            android:text=" X "
            android:textSize="36sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/icones"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:id="@+id/imgcamcentro"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="140dp"
            android:src="@drawable/ic_baseline_camera_alt" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sua Foto Aqui"
            android:fontFamily="sans-serif-black"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginTop="200dp"
            android:layout_marginStart="100dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-255dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:text="Passo 2"
        android:textAlignment="center"
        android:textColor="#34B7F1"
        android:textSize="26sp" />


    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-255dp"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-black"
        android:text="Toque no botão          para capturar sua foto"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imgobja"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="-220dp"
        android:src="@drawable/baseline_arrow_circle_up_24" />

    <ImageView
        android:id="@+id/imgobjb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="-35dp"
        android:src="@drawable/baseline_circle_24" />


</LinearLayout>