<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tarefas_dificeis.trf_dificil_add_contato_pt2">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="40dp"
        app:cardCornerRadius="30dp"
        android:layout_gravity="end|center"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:background="#075E54"
            android:contextClickable="false"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-black"
                android:text="+55 11 95354-5556"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginStart="85dp"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_arrow_back"
                android:layout_marginTop="-40dp"
                android:layout_marginStart="10dp"/>

            <ImageView
                android:id="@+id/imgperfiljoao"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/joao"
                android:layout_marginTop="-55dp"
                android:layout_marginStart="32dp"/>

            <ImageView
                android:id="@+id/imggrava"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_videocam"
                android:layout_marginTop="-49dp"
                android:layout_marginStart="250dp"/>

            <ImageView
                android:id="@+id/imgphone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_phone"
                android:layout_marginTop="-49dp"
                android:layout_marginStart="280dp"/>

            <ImageView
                android:id="@+id/imgoptions"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_more_vert"
                android:layout_marginTop="-50dp"
                android:layout_marginStart="310dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/fundowhats"
            android:layout_marginTop="60dp">


            <EditText
                android:id="@+id/ettxtmsg"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginTop="286dp"
                android:background="@drawable/white_background"
                android:drawableLeft="@drawable/baseline_insert_emoticon"
                android:drawablePadding="8dp"
                android:hint="Mensagem"
                android:padding="8dp"
                android:textColor="@color/black"
                />

            <ImageView
                android:id="@+id/imganexo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="286dp"
                android:layout_marginStart="-100dp"
                android:src="@drawable/baseline_attach_file" />

            <ImageView
                android:id="@+id/imgmreais"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="286dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/baseline_monetization"/>

            <ImageView
                android:id="@+id/imgcamera"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="286dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_baseline_camera_alt" />

            <ImageView
                android:id="@+id/imgenviamsg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:src="@drawable/baseline_play_arrow"
                android:background="@drawable/btnenviar"
                android:layout_marginTop="289dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="-320dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_background"
                android:fontFamily="sans-serif-black"
                android:text="   Olá, Bom dia!"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textIsSelectable="false"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:background="@color/gray"
                android:layout_marginStart="-160dp">

                <TextView
                    android:id="@+id/txtbloqueia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="    Bloquear     |"
                    android:textSize="26sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/txtadicionar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="      Adicionar"
                    android:clickable="true"
                    android:textSize="26sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="-35dp"
                    android:layout_marginStart="180dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txttmsg"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginLeft="-330dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/white_background"
                android:fontFamily="sans-serif-black"
                android:text="   Meu número novo mãe!"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textIsSelectable="false"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/ll_addcontato"
                android:layout_width="320dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:visibility="invisible"
                android:background="@color/white"
                android:layout_marginTop="110dp"
                android:layout_marginStart="-230dp">

                <TextView
                    android:id="@+id/txt_criacontato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="   Criar contato"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:clickable="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/txt_adicionarexistente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="   Adicionar contato existente"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passo 2"
        android:fontFamily="sans-serif-black"
        android:textSize="26sp"
        android:textColor="#34B7F1"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginStart="-268dp"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toque na opção 'Adiconar'"
        android:fontFamily="sans-serif-black"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="70dp"
        android:layout_marginStart="-185dp"/>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aguarde e toque em 'Criar Contato'"
        android:fontFamily="sans-serif-black"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="110dp"
        android:layout_marginStart="-315dp"/>

</LinearLayout>