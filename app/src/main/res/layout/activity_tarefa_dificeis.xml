<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/lavender"
    tools:context=".tarefas_faceis.tarefa_faceis">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_edittext"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Escolha uma tarefa :"
                android:textColor="@color/lavender"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btn_adicionaContato"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/lavender"
                android:text="Adicionar Contato"
                android:layout_gravity="center"
                android:textSize="22sp"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/btn_enviaAnexo"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/lavender"
                android:text="Enviar Anexo 'Documento'"
                android:layout_gravity="center"
                android:textSize="22sp"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/btn_enviaAudio"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/lavender"
                android:text="Enviar Áudio"
                android:layout_gravity="center"
                android:textSize="22sp"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/btn_voltarTD"
                android:layout_width="120dp"
                android:layout_height="74dp"
                android:layout_marginTop="52dp"
                android:layout_gravity="right"
                android:padding="12dp"
                android:text="Voltar"
                android:textSize="20sp"
                app:cornerRadius="15dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>