<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tarefas_dificeis.trf_dificil_audio_pt2">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        android:layout_gravity="end|center"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:background="#075E54"
            android:contextClickable="false"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-black"
                android:text="João"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_arrow_back"
                android:layout_marginTop="-40dp"
                android:layout_marginStart="10dp"/>

            <ImageView
                android:id="@+id/imgperfiljoao"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/joao"
                android:layout_marginTop="-55dp"
                android:layout_marginStart="40dp"/>

            <ImageView
                android:id="@+id/imggrava"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_videocam"
                android:layout_marginTop="-49dp"
                android:layout_marginStart="200dp"/>

            <ImageView
                android:id="@+id/imgphone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_phone"
                android:layout_marginTop="-49dp"
                android:layout_marginStart="240dp"/>

            <ImageView
                android:id="@+id/imgoptions"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_more_vert"
                android:layout_marginTop="-50dp"
                android:layout_marginStart="280dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/fundowhats"
            android:layout_marginTop="60dp">


            <EditText
                android:id="@+id/ettxtmsg"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginTop="286dp"
                android:background="@drawable/white_background"
                android:drawableLeft="@drawable/baseline_insert_emoticon"
                android:drawablePadding="8dp"
                android:hint="Mensagem"
                android:padding="8dp"
                android:textColor="@color/black"
                />

            <ImageView
                android:id="@+id/imganexo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="286dp"
                android:layout_marginStart="-100dp"
                android:src="@drawable/baseline_attach_file" />

            <ImageView
                android:id="@+id/imgmreais"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="286dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/baseline_monetization"/>

            <ImageView
                android:id="@+id/imgcamera"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="286dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_baseline_camera_alt" />

            <ImageView
                android:id="@+id/imgenviamsg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:src="@drawable/microfone"
                android:background="@drawable/btnenviar"
                android:layout_marginTop="289dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="-320dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_background"
                android:fontFamily="sans-serif-black"
                android:text="   Olá, Bom dia!"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textIsSelectable="false"
                android:textSize="18sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passo 2"
        android:fontFamily="sans-serif-black"
        android:textSize="26sp"
        android:textColor="#34B7F1"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginStart="-258dp"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toque e segure no microfone          para gravar o áudio"
        android:fontFamily="sans-serif-black"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="70dp"
        android:layout_marginStart="-256dp"/>


    <ImageView
        android:id="@+id/imgobjeto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/microfone"
        android:background="@drawable/btnenviar"
        android:layout_marginTop="68dp"
        android:layout_marginLeft="-45dp"/>

    <TextView
        android:id="@+id/txtaudiodesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Para enviar o áudio solte o botão   do microfone"
        android:fontFamily="sans-serif-black"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="-390dp"/>

</LinearLayout>